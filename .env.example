# =============================================================================
#                    Always Attend Configuration Template
# =============================================================================
# 
# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your credentials and settings
# 3. Keep your .env file secure - never commit it to version control
#

# =============================================================================
# CORE AUTHENTICATION & PORTAL SETTINGS
# =============================================================================

# Your university credentials
USERNAME=""
PASSWORD=""

# Portal URL (will be auto-configured during setup)
PORTAL_URL=""

# Optional: TOTP Secret for 2FA (Base32 encoded)
# Get this when setting up your authenticator app
TOTP_SECRET=""

# =============================================================================
# LANGUAGE & LOCALIZATION
# =============================================================================

# Preferred language: en, zh_CN, zh_TW
# Will be set automatically during first run
LANGUAGE_PREFERENCE=""

# =============================================================================
# ATTENDANCE DATABASE
# =============================================================================

# Location of attendance codes (default: ./data)
CODES_DB_PATH="data"

# Optional Git repository that mirrors the data/ tree
CODES_DB_REPO=""

# Branch to checkout when syncing the repository
CODES_DB_BRANCH="main"

# Target week override (leave blank to auto-detect latest week)
WEEK_NUMBER=""

# =============================================================================
# BROWSER & TECHNICAL SETTINGS
# =============================================================================

# Browser: chromium, firefox, webkit
BROWSER="chromium"

# Browser channel (chromium only): chrome, chrome-beta, msedge, msedge-beta
# Use "chrome" to use your system Chrome browser (recommended)
BROWSER_CHANNEL="chrome"

# Headless mode: 1 = hidden, 0 = visible (recommended for first run)
HEADLESS="0"

# Session storage file (relative to project root)
STORAGE_STATE="storage_state.json"

# Advanced: Persistent browser profile directory
USER_DATA_DIR=""

# Auto-login: 1 = enable automatic login, 0 = manual login only
AUTO_LOGIN="1"

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Logging profile: user, quiet, debug
LOG_PROFILE="user"

# Log file path (optional)
LOG_FILE=""

# Skip session check (for debugging)
SKIP_SESSION_CHECK="0"

# Dry run mode (test without actually submitting)
DRY_RUN="0"

# Skip remote git update check (set to 1 to disable)
SKIP_UPDATE_CHECK="0"

# =============================================================================
# CLI INTERFACE & ANIMATIONS
# =============================================================================

# CLI display style: fancy, simple, minimal
# fancy = typewriter animations and rich visuals
# simple = basic formatting without animations
# minimal = text-only output
CLI_STYLE="fancy"

# Animation speed: fast, normal, slow, instant, or decimal seconds (e.g. 0.001)
# Controls the speed of typewriter effects and transitions
ANIMATION_SPEED="normal"

# Optional: override line-to-line delay (seconds) when using custom speeds
# ANIMATION_LINE_DELAY="0.002"

# Animation mode: on, off, auto
# on = always enable animations (default)
# off = disable animations regardless of style
# auto = enable only when stdout is a TTY
CLI_ANIMATIONS="on"

# Force enable animations for non-TTY environments (testing only)
FORCE_ANIMATIONS="false"



# =============================================================================
# DO NOT MODIFY BELOW THIS LINE
# =============================================================================
# These are set automatically by the application

# Configuration tracking
_CONFIG_VERSION="2.0"
_SETUP_COMPLETED=""
