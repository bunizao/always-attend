# Base portal URL
PORTAL_URL="https://attendance.monash.edu.my/student/Default.aspx"

# Okta credentials
USERNAME="your_username"
PASSWORD="your_password"

# Choose one MFA mode:
# - Provide TOTP secret to auto-generate codes (preferred)
TOTP_SECRET="BASE32_TOTP_SECRET"
# - Or provide a manual code via env when running (one-off)
# MFA_CODE="123456"

# Optional browser engine: chromium (default), firefox, webkit
BROWSER="chromium"
# Prefer system-installed Chrome/Edge to avoid Playwright downloads (chromium only)
BROWSER_CHANNEL="chrome"   # or chrome-beta | msedge | msedge-beta

# Headless mode: 1=headless (default for submit), 0=show UI (recommended for login)
HEADLESS="1"

# Optional persistent browser profile (when set, cookies persist here; storage_state.json is ignored)
# USER_DATA_DIR="./chrome-profile"

# Persist authenticated session to reduce MFA prompts
STORAGE_STATE="storage_state.json"

# Alternative one-liner codes, e.g. "Workshop 1:ABCDE;Workshop 2:FGHIJ"
# CODES=""

# ---- Codes source options ----
# Prefer using a JSON produced by GitHub Actions (raw URL)
# CODES_URL="https://raw.githubusercontent.com/<org>/<repo>/main/data/FIT1111/3.json"

# Or use a local file path
# CODES_FILE="./codes.sample.json"

# Optional auto-discovery of codes.json (script will request: {CODES_BASE_URL}/data/{COURSE_CODE}/{WEEK_NUMBER}.json)
# COURSE_CODE="FIT1111"
# WEEK_NUMBER="3"
# CODES_BASE_URL="https://raw.githubusercontent.com/<org>/<repo>/main"

# Where to submit missing codes (Issue templates)
# ISSUES_NEW_URL="https://github.com/<org>/<repo>/issues/new/choose"

# Optional: per-slot environment variables also work (take highest priority)
# Example:
# WORKSHOP_1="JZXBA"
# APPLIED_1="6B7UF"

# ENV_FILE can point to a different env file path if needed
# ENV_FILE=".env"
